{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"useDefineForClassFields": false,
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.json",
		"./config/*.json"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test"
	]
}
