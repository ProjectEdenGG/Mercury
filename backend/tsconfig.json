{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.json"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test"
	]
}
